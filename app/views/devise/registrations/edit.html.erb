<%= render "devise/shared/auth_layout" do %>
  <div class="space-y-3 text-center">
    <p class="text-xs uppercase tracking-[0.3em] text-emerald-300">Perfil</p>
    <h1 class="text-2xl font-semibold">Atualize seus dados</h1>
    <p class="text-sm text-slate-400">Gerencie sua conta e segurança.</p>
  </div>

  <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), method: :put, class: "mt-6 space-y-4" do |form| %>
    <div>
      <%= form.label :email, class: "text-xs uppercase tracking-[0.2em] text-slate-400" %>
      <%= form.email_field :email, autocomplete: "email", class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white placeholder:text-slate-500 focus:border-emerald-400 focus:outline-none" %>
    </div>
    <div>
      <%= form.label :password, "Nova senha", class: "text-xs uppercase tracking-[0.2em] text-slate-400" %>
      <%= form.password_field :password, autocomplete: "new-password", class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white placeholder:text-slate-500 focus:border-emerald-400 focus:outline-none" %>
      <p class="mt-2 text-xs text-slate-500">Deixe em branco se não quiser alterar.</p>
    </div>
    <div>
      <%= form.label :password_confirmation, class: "text-xs uppercase tracking-[0.2em] text-slate-400" %>
      <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white placeholder:text-slate-500 focus:border-emerald-400 focus:outline-none" %>
    </div>
    <div>
      <%= form.label :current_password, class: "text-xs uppercase tracking-[0.2em] text-slate-400" %>
      <%= form.password_field :current_password, autocomplete: "current-password", class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white placeholder:text-slate-500 focus:border-emerald-400 focus:outline-none" %>
      <p class="mt-2 text-xs text-slate-500">Precisamos da sua senha atual para confirmar as alterações.</p>
    </div>
    <%= form.submit "Salvar mudanças", class: "w-full rounded-2xl bg-emerald-400 px-6 py-3 text-sm font-semibold text-slate-950 transition hover:bg-emerald-300" %>
  <% end %>

  <div class="mt-8 border-t border-slate-800 pt-6 text-center text-sm text-slate-400">
    <p>Deseja cancelar sua conta?</p>
    <%= button_to "Cancelar conta", registration_path(resource_name), method: :delete, data: { confirm: "Tem certeza?" }, class: "mt-3 rounded-full border border-slate-700 px-4 py-2 text-xs text-slate-200" %>
  </div>
<% end %>
