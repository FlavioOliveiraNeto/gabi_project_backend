<%= render "devise/shared/auth_layout" do %>
  <div class="space-y-3 text-center">
    <p class="text-xs uppercase tracking-[0.3em] text-emerald-300">Bem-vindo de volta</p>
    <h1 class="text-2xl font-semibold">Entrar na plataforma</h1>
    <p class="text-sm text-slate-400">Acesse seus painÃ©is e acompanhe seu progresso.</p>
  </div>

  <%= form_with model: resource, as: resource_name, url: session_path(resource_name), class: "mt-6 space-y-4" do |form| %>
    <div>
      <%= form.label :email, class: "text-xs uppercase tracking-[0.2em] text-slate-400" %>
      <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white placeholder:text-slate-500 focus:border-emerald-400 focus:outline-none" %>
    </div>
    <div>
      <%= form.label :password, class: "text-xs uppercase tracking-[0.2em] text-slate-400" %>
      <%= form.password_field :password, autocomplete: "current-password", class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white placeholder:text-slate-500 focus:border-emerald-400 focus:outline-none" %>
    </div>
    <div class="flex items-center justify-between text-xs text-slate-400">
      <label class="flex items-center gap-2">
        <%= form.check_box :remember_me, class: "rounded border-slate-700 bg-slate-950 text-emerald-400 focus:ring-emerald-400" %>
        Lembrar de mim
      </label>
      <%= link_to "Esqueci minha senha", new_password_path(resource_name), class: "text-emerald-300" %>
    </div>
    <%= form.submit "Entrar", class: "w-full rounded-2xl bg-emerald-400 px-6 py-3 text-sm font-semibold text-slate-950 transition hover:bg-emerald-300" %>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>
