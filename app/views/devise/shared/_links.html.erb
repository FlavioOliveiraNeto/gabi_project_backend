<div class="mt-6 space-y-2 text-center text-sm text-slate-300">
  <% if controller_name != "sessions" %>
    <%= link_to "Já possui conta? Entrar", new_session_path(resource_name), class: "block transition hover:text-white" %>
  <% end %>
  <% if devise_mapping.registerable? && controller_name != "registrations" %>
    <%= link_to "Criar nova conta", new_registration_path(resource_name), class: "block transition hover:text-white" %>
  <% end %>
  <% if devise_mapping.recoverable? && controller_name != "passwords" %>
    <%= link_to "Esqueci minha senha", new_password_path(resource_name), class: "block transition hover:text-white" %>
  <% end %>
  <% if devise_mapping.confirmable? && controller_name != "confirmations" %>
    <%= link_to "Reenviar confirmação", new_confirmation_path(resource_name), class: "block transition hover:text-white" %>
  <% end %>
</div>
