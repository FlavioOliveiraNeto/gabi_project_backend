<%= render "devise/shared/auth_layout" do %>
  <div class="space-y-3 text-center">
    <p class="text-xs uppercase tracking-[0.3em] text-emerald-300">Recuperação</p>
    <h1 class="text-2xl font-semibold">Esqueceu sua senha?</h1>
    <p class="text-sm text-slate-400">Envie seu e-mail para receber o link.</p>
  </div>

  <%= form_with model: resource, as: resource_name, url: password_path(resource_name), class: "mt-6 space-y-4" do |form| %>
    <div>
      <%= form.label :email, class: "text-xs uppercase tracking-[0.2em] text-slate-400" %>
      <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 w-full rounded-2xl border border-slate-700 bg-slate-950 px-4 py-3 text-sm text-white placeholder:text-slate-500 focus:border-emerald-400 focus:outline-none" %>
    </div>
    <%= form.submit "Enviar instruções", class: "w-full rounded-2xl bg-emerald-400 px-6 py-3 text-sm font-semibold text-slate-950 transition hover:bg-emerald-300" %>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>
